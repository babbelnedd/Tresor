<UserControl x:Class="Tresor.View.UserControls.TabTemplate" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:Tresor.Resources.Converter;assembly=Tresor.Resources"
             xmlns:mvvm="clr-namespace:Tresor.Framework.MVVM;assembly=Tresor.Framework">
    <UserControl.Resources>
        <converter:BoolToColorConverter x:Key="TabToColorConverter" />
    </UserControl.Resources>
    <Border Width="125" Height="25" Background="{Binding IsSelected, Converter={StaticResource TabToColorConverter}}" BorderBrush="Black" BorderThickness="1.2" CornerRadius="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Margin="4,0,0,0" VerticalAlignment="Center" Text="{Binding Content.Account, FallbackValue=Passwörter}" />
            <TextBlock Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center" FontSize="16" Text="x" 
                       mvvm:SingleEventCommand.RoutedEventName="MouseDown"
                       mvvm:SingleEventCommand.TheCommandToRun="{Binding CloseTabCommand}" 
                       mvvm:SingleEventCommand.CommandParameter="{Binding }"/>
        </Grid>
    </Border>
</UserControl>
